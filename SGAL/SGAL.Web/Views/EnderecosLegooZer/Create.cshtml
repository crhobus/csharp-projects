@using SGAL.Dominio;
@model SGAL.Dominio.Endereco

@{
    ViewBag.Title = string.Format("Endereço de {0}", ViewBag.LegooZer);
}

<h2>@string.Format("Adicionar endereços em {0}", ViewBag.LegooZer)</h2>

@using (Html.BeginForm(new { idLegoozer = ViewBag.LegooZer.LegooZerID }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Endereco LegooZer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tipo de Endereço</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TipoEndereco,
                    new List<SelectListItem> {
                        new SelectListItem() {Value = TipoEndereco.Residencial.ToString(), Text = "Residencial"},
                        new SelectListItem() {Value = TipoEndereco.Comercial.ToString(), Text = "Comercial"},
                    },
                    new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipoEndereco, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Linha 01</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Linha01, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Linha01, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Linha 02</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Linha02, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Linha02, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Cidade</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Estado</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Codigo Postal</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodigoPostal, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CodigoPostal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Pais</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pais, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pais, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para lista", "Index", new { idLegoozer = ViewBag.LegooZer.LegooZerID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
