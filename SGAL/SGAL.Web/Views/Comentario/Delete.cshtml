@model SGAL.Web.Models.ComentarioView

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir</h2>

<h3>Você tem certeza que deseja excluir esse comentário ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Data
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataComentario)
        </dd>

        <dt>
            Comentário
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TextoComentario)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para Lista", "Index", new { idMontagem = ViewBag.Montagem.MontagemID })
        </div>
    }
</div>
