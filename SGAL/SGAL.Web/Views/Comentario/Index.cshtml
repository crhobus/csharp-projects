@model IEnumerable<SGAL.Dominio.Comentario>

@{
    ViewBag.Title = "Comentários";
}

<h2>Comentários</h2>

<p>
    @Html.ActionLink("Adicionar Novo Comentário", "Create", new { idMontagem = ViewBag.Montagem.MontagemID })
</p>
<table class="table">
    <tr>
        <th>
            Data
        </th>
        <th>
            Comentário
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.DataComentario.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TextoComentario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { idMontagem = ViewBag.Montagem.MontagemID, idComentario = item.ComentarioID }) |
            @Html.ActionLink("Excluir", "Delete", new { idMontagem = ViewBag.Montagem.MontagemID , idComentario =item.ComentarioID })
        </td>
    </tr>
}


</table>
